# Global security & defaults
/*
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  Origin-Agent-Cluster: ?1

# Immutable build output (Next.js)
# Files in this folder are content-hashed
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Static assets in known folders
/images/* 
  Cache-Control: public, max-age=31536000, immutable
/company/*
  Cache-Control: public, max-age=31536000, immutable
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Favicon (rotate occasionally)
# Avoid year-long caching so updates propagate
/favicon.ico
  Cache-Control: public, max-age=2592000

# HTML/document routes (SSR/SSG pages)
# Cache briefly in browser, longer at the edge
/
  Cache-Control: public, max-age=3600, s-maxage=86400
  Vary: Accept-Language

/nl-nl/*
  Cache-Control: public, max-age=3600, s-maxage=86400
  Vary: Accept-Language

/en/*
  Cache-Control: public, max-age=3600, s-maxage=86400
  Vary: Accept-Language

# Tool pages – mostly static
/tools/*
  Cache-Control: public, max-age=7200, s-maxage=172800
/*/tools/*
  Cache-Control: public, max-age=7200, s-maxage=172800

# EXCEPTION: Affiliate Network Uptime – must always be fresh
/tools/affiliate-network-uptime
  Cache-Control: no-store
  Vary: Authorization, Cookie, Accept-Language
/*/tools/affiliate-network-uptime
  Cache-Control: no-store
  Vary: Authorization, Cookie, Accept-Language

# Legal pages – safe to cache longer
/privacy
  Cache-Control: public, max-age=86400, s-maxage=604800
/terms
  Cache-Control: public, max-age=86400, s-maxage=604800
/refund-policy
  Cache-Control: public, max-age=86400, s-maxage=604800

/*/privacy
  Cache-Control: public, max-age=86400, s-maxage=604800
/*/terms
  Cache-Control: public, max-age=86400, s-maxage=604800
/*/refund-policy
  Cache-Control: public, max-age=86400, s-maxage=604800

# Dashboard – never cache
/dashboard/*
  Cache-Control: no-cache, no-store, must-revalidate
/*/dashboard/*
  Cache-Control: no-cache, no-store, must-revalidate

# Auth – never cache
/auth
  Cache-Control: no-cache, no-store, must-revalidate
/*/auth
  Cache-Control: no-cache, no-store, must-revalidate

# API – force fresh responses and avoid shared-cache mixing
/api/*
  Cache-Control: no-store, must-revalidate
  Vary: Authorization, Origin
